<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="16dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="16dp" />

    <TextView
        android:id="@+id/signup_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="회원가입"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="@id/guideline_start"
        app:layout_constraintEnd_toEndOf="@id/guideline_end" />

    <EditText
        android:id="@+id/signup_email_et1"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:hint="아이디(이메일)"
        android:inputType="text|textNoSuggestions"
        android:textSize="16sp"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@id/signup_title"
        app:layout_constraintStart_toStartOf="@id/guideline_start"
        app:layout_constraintEnd_toStartOf="@id/signup_symbol" />

    <TextView
        android:id="@+id/signup_symbol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="\@"
        android:textSize="18sp"
        android:layout_marginHorizontal="8dp"
        android:layout_marginTop="55dp"
        app:layout_constraintTop_toBottomOf="@id/signup_title"
        app:layout_constraintStart_toEndOf="@id/signup_email_et1"
        app:layout_constraintEnd_toStartOf="@+id/signup_email_et2" />

    <EditText
        android:id="@+id/signup_email_et2"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:hint="직접 입력"
        android:inputType="textEmailAddress"
        android:textSize="16sp"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@id/signup_title"
        app:layout_constraintStart_toEndOf="@id/signup_symbol"
        app:layout_constraintEnd_toEndOf="@id/guideline_end" />

    <ImageButton
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="55dp"
        android:layout_marginEnd="10dp"
        android:scaleType="centerInside"
        android:src="@drawable/nugu_btn_down"
        android:background="@drawable/transparent_thumb"
        app:layout_constraintTop_toBottomOf="@id/signup_title"
        app:layout_constraintEnd_toEndOf="@id/guideline_end"/>

    <EditText
        android:id="@+id/signup_password_et"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:hint="비밀번호"
        android:inputType="textPassword"
        android:textSize="16sp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/signup_email_et1"
        app:layout_constraintStart_toStartOf="@id/guideline_start"
        app:layout_constraintEnd_toEndOf="@id/guideline_end" />

    <ImageView
        android:id="@+id/signup_password_check_toggle"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/btn_input_password"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toTopOf="@id/signup_password_et"
        app:layout_constraintBottom_toBottomOf="@id/signup_password_et"
        app:layout_constraintEnd_toEndOf="@id/guideline_end" />

    <EditText
        android:id="@+id/signup_password_check_et"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:hint="비밀번호 확인"
        android:inputType="textPassword"
        android:textSize="16sp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/signup_password_et"
        app:layout_constraintStart_toStartOf="@id/guideline_start"
        app:layout_constraintEnd_toEndOf="@id/guideline_end" />

    <ImageView
        android:id="@+id/signup_password_toggle"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/btn_input_password"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toTopOf="@id/signup_password_check_et"
        app:layout_constraintBottom_toBottomOf="@id/signup_password_check_et"
        app:layout_constraintEnd_toEndOf="@id/guideline_end" />

    <EditText
        android:id="@+id/signup_name_et"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:hint="닉네임"
        android:inputType="text|textNoSuggestions"
        android:textSize="16sp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/signup_password_check_et"
        app:layout_constraintStart_toStartOf="@id/guideline_start"
        app:layout_constraintEnd_toEndOf="@id/guideline_end" />


    <Button
        android:id="@+id/signup_btn"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="가입완료"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_marginTop="32dp"
        android:background="#3D3DFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/guideline_start"
        app:layout_constraintEnd_toEndOf="@id/guideline_end" />

    <TextView
        android:id="@+id/signup_to_login_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이미 계정이 있으신가요? 로그인"
        android:textColor="@color/purple_500"
        android:textSize="14sp"
        android:layout_marginTop="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>