<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/item_saved_album_img_cardView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:cardCornerRadius="7dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/item_saved_album_img_iv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            android:src="@drawable/img_album_exp2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/item_saved_album_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="40dp"
        android:text="LILAC"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/item_saved_album_img_cardView"
        app:layout_constraintTop_toTopOf="@id/item_saved_album_img_cardView"
        app:layout_constraintBottom_toBottomOf="@id/item_saved_album_img_cardView"/>

    <TextView
        android:id="@+id/item_saved_album_singer_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="아이유 (IU)"
        android:textColor="#a8a8a8"
        android:textSize="13sp"
        app:layout_constraintStart_toStartOf="@id/item_saved_album_title_tv"
        app:layout_constraintTop_toBottomOf="@id/item_saved_album_title_tv"/>

    <TextView
        android:id="@+id/item_saved_album_info_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2024.05.15 | 정규 | JPOP"
        android:textColor="#a8a8a8"
        android:textSize="13sp"
        app:layout_constraintStart_toStartOf="@id/item_saved_album_singer_tv"
        app:layout_constraintTop_toBottomOf="@id/item_saved_album_singer_tv"/>

    <ImageView
        android:id="@+id/item_saved_album_play_iv"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/btn_player_play"
        app:layout_constraintTop_toTopOf="@id/item_saved_album_img_cardView"
        app:layout_constraintBottom_toBottomOf="@id/item_saved_album_img_cardView"
        app:layout_constraintEnd_toStartOf="@id/btn_more"/>

    <ImageView
        android:id="@+id/btn_more"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/btn_player_more"
        app:layout_constraintTop_toTopOf="@id/item_saved_album_img_cardView"
        app:layout_constraintBottom_toBottomOf="@id/item_saved_album_img_cardView"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="8dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>