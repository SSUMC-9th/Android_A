<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

        <TextView
            android:id="@+id/item_songs_number_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:text="01"
            android:textColor="@color/black"
            android:textSize="10sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/item_songs_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="노래 이름"
            android:textColor="@color/black"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@+id/item_songs_number_tv"
            app:layout_constraintStart_toEndOf="@+id/item_songs_number_tv"
            app:layout_constraintTop_toTopOf="@+id/item_songs_number_tv" />


        <TextView
            android:id="@+id/item_songs_singer_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:text="가수 이름"
            android:textSize="10sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/item_songs_title_tv"
            app:layout_constraintTop_toBottomOf="@+id/item_songs_title_tv" />

        <ImageView
            android:id="@+id/item_songs_play_iv"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/btn_miniplayer_play"
            app:layout_constraintBottom_toBottomOf="@+id/item_songs_more_iv"
            app:layout_constraintEnd_toStartOf="@+id/item_songs_more_iv"
            app:layout_constraintTop_toTopOf="@+id/item_songs_more_iv" />

        <ImageView
            android:id="@+id/item_songs_more_iv"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginEnd="15dp"
            android:src="@drawable/btn_player_more"
            app:layout_constraintBottom_toBottomOf="@+id/item_songs_singer_tv"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/item_songs_title_tv" />

    </androidx.constraintlayout.widget.ConstraintLayout>

