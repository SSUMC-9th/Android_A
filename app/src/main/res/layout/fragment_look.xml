<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="20dp"
        android:paddingTop="20dp"
        android:background="@color/white">

        <TextView
            android:id="@+id/look_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="둘러보기"
            android:textColor="@color/black"
            android:textSize="22sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="..."
            android:textSize="18sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:padding="0dp"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:minWidth="0dp"
            android:minHeight="0dp"
            app:cornerRadius="10dp"
            app:backgroundTint="#F5F5F5"
            android:stateListAnimator="@null"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/look_title_tv"
            app:layout_constraintBottom_toBottomOf="@id/look_title_tv"/>

        <HorizontalScrollView
            android:id="@+id/look_chip_scroll_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:scrollbars="none"
            app:layout_constraintTop_toBottomOf="@id/look_title_tv">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="차트"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:background="@color/purple_500"
                    android:stateListAnimator="@null"
                    android:minWidth="0dp"
                    android:minHeight="0dp"
                    android:paddingHorizontal="20dp"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginStart="10dp"
                    android:text="영상"
                    android:textSize="14sp"
                    android:textColor="#888888"
                    android:stateListAnimator="@null"
                    android:minWidth="0dp"
                    android:minHeight="0dp"
                    android:paddingHorizontal="20dp"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginStart="10dp"
                    android:text="장르"
                    android:textSize="14sp"
                    android:textColor="#888888"
                    android:stateListAnimator="@null"
                    android:minWidth="0dp"
                    android:minHeight="0dp"
                    android:paddingHorizontal="20dp"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginStart="10dp"
                    android:text="상황"
                    android:textSize="14sp"
                    android:textColor="#888888"
                    android:stateListAnimator="@null"
                    android:minWidth="0dp"
                    android:minHeight="0dp"
                    android:paddingHorizontal="20dp"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginStart="10dp"
                    android:text="분위기"
                    android:textSize="14sp"
                    android:textColor="#888888"
                    android:stateListAnimator="@null"
                    android:minWidth="0dp"
                    android:minHeight="0dp"
                    android:paddingHorizontal="20dp"/>

            </LinearLayout>
        </HorizontalScrollView>
        <TextView
            android:id="@+id/look_chart_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:text="차트 >"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/look_chip_scroll_view"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="380dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="5dp"
            app:cardBackgroundColor="@color/white"
            app:layout_constraintTop_toBottomOf="@id/look_chart_title_tv"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="20dp">

                <TextView
                    android:id="@+id/chart_card_title_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="FLO 차트"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <TextView
                    android:id="@+id/chart_card_time_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="19시 기준"
                    android:textSize="12sp"
                    android:textColor="#888888"
                    android:layout_marginStart="8dp"
                    app:layout_constraintStart_toEndOf="@id/chart_card_title_tv"
                    app:layout_constraintBottom_toBottomOf="@id/chart_card_title_tv"
                    app:layout_constraintTop_toTopOf="@id/chart_card_title_tv"/>

                <TextView
                    android:id="@+id/chart_card_desc_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="최근 24시간 집계"
                    android:textSize="12sp"
                    android:textColor="#888888"
                    android:layout_marginTop="3dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/chart_card_title_tv"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="▷ 전체듣기"
                    android:textSize="13sp"
                    android:textColor="@color/black"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>