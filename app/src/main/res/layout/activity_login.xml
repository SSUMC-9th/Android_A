<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:padding="20dp">

    <ImageView
        android:id="@+id/flo_logo"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_flo_logo"
        android:scaleType="centerInside"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/login_email_et1"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:hint="아이디(이메일)"
        android:inputType="textEmailAddress"
        android:textSize="16sp"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@id/flo_logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/login_symbol" />

    <TextView
        android:id="@+id/login_symbol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="\@"
        android:textSize="18sp"
        android:layout_marginHorizontal="8dp"
        android:layout_marginTop="55dp"
        app:layout_constraintTop_toBottomOf="@id/flo_logo"
        app:layout_constraintStart_toEndOf="@id/login_email_et1"
        app:layout_constraintEnd_toStartOf="@+id/login_email_et2" />

    <EditText
        android:id="@+id/login_email_et2"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:hint="직접 입력"
        android:inputType="textEmailAddress"
        android:textSize="16sp"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@id/flo_logo"
        app:layout_constraintStart_toEndOf="@id/login_symbol"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageButton
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="55dp"
        android:layout_marginEnd="10dp"
        android:scaleType="centerInside"
        android:src="@drawable/nugu_btn_down"
        android:background="@drawable/transparent_thumb"
        app:layout_constraintTop_toBottomOf="@id/flo_logo"
        app:layout_constraintEnd_toEndOf="parent"/>

    <EditText
        android:id="@+id/login_password_et"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:hint="비밀번호"
        android:inputType="textPassword"
        android:textSize="16sp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/login_email_et1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/login_password_toggle"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/btn_input_password"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toTopOf="@id/login_password_et"
        app:layout_constraintBottom_toBottomOf="@id/login_password_et"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/login_btn"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="로그인"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:background="#3D3DFF"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/login_password_et"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <LinearLayout
        android:id="@+id/find_account_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/login_btn"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/find_id_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="아이디 찾기"
            android:textSize="14sp"
            android:textColor="#666666" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" | "
            android:textSize="14sp"
            android:textColor="#666666" />

        <TextView
            android:id="@+id/find_password_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="비밀번호 찾기"
            android:textSize="14sp"
            android:textColor="#666666" />

    </LinearLayout>

    <TextView
        android:id="@+id/login_to_signup_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="회원가입"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/login_btn"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/login_t_id_btn"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="T 아이디로 로그인"
        android:textSize="16sp"
        android:textColor="@android:color/white"
        android:background="#000000"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@id/login_to_signup_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/login_phone_btn"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="휴대폰 번호 로그인"
        android:textSize="16sp"
        android:background="#F0F0F0"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/login_t_id_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <LinearLayout
        android:id="@+id/sns_login_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@id/login_phone_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/login_naver_btn"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/naver_44"
            android:layout_marginEnd="16dp" />

        <ImageView
            android:id="@+id/login_kakao_btn"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/kakako_44"
            android:layout_marginEnd="16dp" />

        <ImageView
            android:id="@+id/login_apple_btn"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/apple_44" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>